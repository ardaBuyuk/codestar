<%- include('../partials/header') %>
<section>
    <div class="html-posts">
        <h2 class="text-light">Python Paylaş</h2>
        <h2 class="text-light for-mobile">PY Paylaş</h2>
    </div><br>
    <form class="shareForm bg-dark" method="POST">
        <div class = " m-3 text-light">
            <div class="form-group">
              <label for="pyHeader">Proje Adı</label>
              <input type="text" class="form-control" name="title" id="pyHeader" required>
            </div>
            <div class="form-group">
              <label for="pyDesc">Proje Açıklaması</label>
             <input type="text" maxlength="80" class = "form-control" name="description" placeholder="max karakter 80 olmalıdır." id="pyDesc" required>
            </div>
            <div class="form-group">
              <label for="pyCod">Python Kodu</label>
              <textarea style="height: 195px !important;" type="text" class = "form-control" name="python" id="pyCod" required></textarea>
            </div>
              <button class = "btn btn-primary" id = "sharePy">Paylaş</button>
          </div>
        </form>
</section>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="js/bootstrap.bundle.js"></script>
<script src="js/bootstrap.bundle.min.js"></script>
<script>
  $(document).ready(function(){
    $("#sharePy").click(function(){
      const title = $("#pyHeader").val();
      const description = $("#pyDesc").val();
      const python = $("#pyCod").val();
      const catgory = "python";

      const data = {
        title: title,
        description: description,
        python: python
      }
      $.post('sharePy', {data: data})
      .then(function(addedCode){
        console.log(addedCode)
      });
    });
  });
</script>
</body>
</html>